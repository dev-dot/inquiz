<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <File name="A1" fileName="A1.log" append="false">
            <PatternLayout pattern="%t %-5p %c{2} - %m%n"/>
        </File>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </Console>
        <Slack name="LoggingService"
               channel="#log"
               webhookUrl="https://hooks.slack.com/services/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"
               username="Logger"
               iconEmoji="robot_face">
            <SlackLogLayout />
        </Slack>
    </Appenders>
    <Loggers>

        <!-- You my want to define class or package level per-logger rules -->
        <Logger name="de.hdm_stuttgart.mi.GuiDriver" level="debug">
            <AppenderRef ref="A1"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="LoggingService"/>
        </Root>
    </Loggers>
</Configuration>
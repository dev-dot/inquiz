<BorderPane minHeight="100.0" minWidth="300.0" prefHeight="750.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.hdm_stuttgart.mi.Gui.ViewHandler.MainController">
    <ImageView fitHeight="1050.0" fitWidth="1680.0" styleClass="defaultBackground">
        <Image url="@../media/backgrounds/background_3.png" />
        <effect>
            <GaussianBlur radius="7.0" />
        </effect>
    </ImageView>
    <top>
        <HBox alignment="TOP_RIGHT" prefHeight="30.0" prefWidth="2000.0" BorderPane.alignment="CENTER">
            <HBox>
                <Label id="gameUserID" fx:id="gameUserID" styleClass="userLabel" text="user">
                    <HBox.margin>
                        <Insets top="12.5"/>
                    </HBox.margin>
                </Label>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../media/icons/user2.png"/>
                    <HBox.margin>
                        <Insets left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </ImageView>
            </HBox>
        </HBox>
    </top>
    <center>
        <GridPane alignment="CENTER">
            <VBox alignment="CENTER" minWidth="200.0" spacing="10" GridPane.columnIndex="1">
                <Label text="Welcome to" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label id="logo" text="inquiz" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="mainUserNameTextField" onAction="#mainEnterStartAction" id="userNameTextField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="35.0" prefWidth="300.0" promptText="username" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label fx:id="mainUserNameHintLabel" id="usernameHint" text="enter your username to start a quiz" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <HBox id="buttonContainer" alignment="CENTER" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <Button fx:id="mainStartButton" onAction="#mainStartAction" id="startButton" mnemonicParsing="false" text="start game" />
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
                </HBox>
            </VBox>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </center>
    <bottom>
        <GridPane>
            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="0">
                <Button fx:id="mainStatsButton" onAction="#mainStatsAction" styleClass="menuButton">
                    <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../media/icons/menus/stats/Group 4@3x.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <GridPane.margin>
                    <Insets bottom="5.0" left="5.0" />
                </GridPane.margin>
            </HBox>
            <HBox alignment="CENTER_RIGHT" GridPane.columnIndex="1">
                <Button fx:id="mainExitButton" alignment="CENTER_RIGHT" contentDisplay="RIGHT" onAction="#mainExitAction" styleClass="menuButton">
                    <graphic>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../media/icons/menus/exit/Group 5@3x.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <GridPane.margin>
                    <Insets bottom="5.0" right="5.0" />
                </GridPane.margin>
            </HBox>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
            </rowConstraints>
        </GridPane>
    </bottom>
    <stylesheets>
        <URL value="@../Style/default.css" />
    </stylesheets>
</BorderPane>
